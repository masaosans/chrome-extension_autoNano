{
  "manifest_version": 3,
  "name": "Local Browser Agent",
  "description": "Gemini Nano powered autonomous browser agent with AX Tree support",
  "version": "1.2",

  "minimum_chrome_version": "120",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel",
    "debugger",
    "webNavigation"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "panel/panel.html"
  },

  "action": {
    "default_title": "Local Browser Agent"
  }
}