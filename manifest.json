{
  "manifest_version": 3,
  "name": "Stable Local Browser Agent",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "debugger",
    "storage",
    "tabs",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "side_panel": {
    "default_path": "sidebar.html"
  }
}